{
  "name": "simplewebauthn-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "npm run build:types && npm run build:testing && npm run build:browser && npm run build:server",
    "lint": "prettier --write packages/ example/ && eslint --fix packages/ example/",
    "docs": "npm run bootstrap && typedoc --tsconfig tsconfigdoc.json",
    "test": "lerna run test",
    "publish": "npm run bootstrap && lerna publish",
    "build:types": "lerna bootstrap --scope=@simplewebauthn-alt/typescript-types",
    "build:testing": "lerna bootstrap --scope=@simplewebauthn-alt/testing",
    "build:browser": "lerna bootstrap --scope=@simplewebauthn-alt/browser",
    "build:server": "lerna bootstrap --scope=@simplewebauthn-alt/server",
    "dev:server": "lerna exec npm run test:watch --scope=@simplewebauthn-alt/server",
    "dev:browser": "lerna exec npm run test:watch --scope=@simplewebauthn-alt/browser"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^25.2.3",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-environment-jsdom": "^26.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.2",
    "ts-jest": "^26.4.4",
    "ts-morph": "^9.0.0",
    "ts-node": "^8.10.2",
    "typedoc": "^0.20.20",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
